.video-player
  position relative;
  overflow hidden;

  > video
    width 100%;

  &::after, &::before
    position absolute;
    z-index 10;
    display block;
    content '';
    opacity 1;
    transition 0.25s all ease;

  &::before
    top 0;
    left 0;
    width 100%;
    height 100%;
    background #0009;

  &.--playing::before, &.--playing::after
    filter blur(10px);
    opacity 0.5;
    transform scale(0);
    transform-origin center center;

  &::after
    top 50%;
    left 50%;
    width 76px;
    height 76px;
    background-image url('../images/icons/play.svg');
    background-size cover;
