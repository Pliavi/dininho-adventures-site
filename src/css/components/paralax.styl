.paralax
  position relative;
  margin-bottom 42px;
  height calc(74vh - 42px);
  background-color #34dcd2;
  background-image url('../images/paralax/sky.png');
  background-position center top;
  background-size cover;
  image-rendering pixelated;

  @media $landscape-mobile-size
    height 100vh;

  >.front-mountains
    height 460px;
    background-image url('../images/paralax/front_mountains.png');

  >.back-mountains
    height 390px;
    background-image url('../images/paralax/back_mountains.png');

  >.front-mountains, >.back-mountains
    position absolute;
    bottom 0;
    display block;
    width 100%;
    background-position center bottom;
    background-size contain;
    background-repeat repeat-x;
    image-rendering pixelated;

    @media $mobile-size
      display none;

  > .logo
    position relative;
    top 32px;
    display block;
    margin auto;
    max-width calc((560px / 1.25));
    width 92%;
    image-rendering pixelated;

    @media $landscape-mobile-size
      top 24px;

  > .dininho
    position relative;
    display block;
    margin auto;
    margin-top 10vh;

    @media $landscape-mobile-size
      margin-top 12px;

  > .ground
    position absolute;
    bottom -24px;
    width 100%;
    height 268px;
    background-image url('../images/paralax/ground.png');
    background-position center bottom;
    background-size cover;
    background-repeat repeat-x;
    image-rendering pixelated;

    @media $desktop-size
      background-size contain;

    @media $landscape-mobile-size
      display block;
      height 180px;
