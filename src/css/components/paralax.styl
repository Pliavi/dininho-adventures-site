.paralax
  position relative;
  margin-bottom 42px;
  height calc(85vh - 82px);
  background-color #34dcd2;
  background-image url('../images/paralax/front_mountains.png'), url('../images/paralax/back_mountains.png'), url('../images/paralax/sky.png');
  background-position center top;
  background-position left calc(-3 * var(--paralax-move-x)) bottom calc(2 * var(--paralax-move-y)), left calc(3 * var(--paralax-move-x)) bottom calc(2 * var(--paralax-move-y)), center top;
  background-size 100vmin, 100vmin, cover;
  background-repeat repeat-x;
  image-rendering pixelated;

  > .logo
    position relative;
    top 32px;
    display block;
    margin auto;
    max-width calc((560px / 1.25));
    width 92%;
    image-rendering pixelated;

    @media $landscape-mobile-size
      top 24px;

  > .dininho
    position relative;
    display block;
    margin auto;
    margin-top calc(10vh + -1.2 * var(--paralax-move-y));
    padding-right calc(2 * var(--paralax-move-x));

    @media $landscape-mobile-size
      display: none;
      margin-top 12px;

  > .ground
    position absolute;
    bottom -24px;
    width 100%;
    height 268px;
    background-image url('../images/paralax/ground.png');
    background-position center bottom;
    background-size cover;
    background-repeat repeat-x;
    image-rendering pixelated;

    @media $desktop-size
      background-size contain;

    @media $landscape-mobile-size
      display block;
      height 180px;
