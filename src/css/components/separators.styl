.separator
  display flex;
  align-items center;
  margin 50px 0;

  > img
    image-rendering pixelated;

  &::after, &::before
    display block;
    width 50%;
    height 3px;
    background white;
    content '';

  &::after
    margin-left 8px;
    border-radius 5px 0 0 5px;

  &::before
    margin-right 8px;
    border-radius 0 5px 5px 0;